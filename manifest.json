{
    "manifest_version": 3,
    "name": "URL Blocker",
    "version": "1.0",
    "description": "Block HTTP requests for specified URLs",
    "permissions": [
      "storage",
      "declarativeNetRequest"
    ],
    "host_permissions": [
      "<all_urls>"
    ],
    "background": {
      "service_worker": "background.js"
    },
    "action": {
      "default_popup": "popup.html",
      "default_icon": {
        "16": "icon.png",
        "48": "icon.png",
        "128": "icon.png"
      }
    },
    "icons": {
      "16": "icon.png",
      "48": "icon.png",
      "128": "icon.png"
    }
  }